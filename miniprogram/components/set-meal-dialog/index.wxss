/* components/set-meal-dialog/index.wxss */
.dialog-container {
    padding: 20rpx;
  }
  
  .dialog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .picker-item {
    padding: 30rpx;
    margin: 20rpx 0;
    background: #f5f5f5;
    border-radius: 12rpx;
  }
  
  .note-section {
    margin: 40rpx 0;
  }
  
  .note-section textarea {
    width: 100%;
    height: 200rpx;
    padding: 20rpx;
    border: 1rpx solid #ddd;
  }