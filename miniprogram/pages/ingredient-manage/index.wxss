.container {
    padding: 20rpx;
}

.btn {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 8rpx;
    background-color: #ff8c00;
    color: #fff;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}

.calendar-box {
    width: 100%;
    height: 600rpx; /* 调整高度 */
    border-radius: 8rpx;
    background-color: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.meal-card {
    padding: 20rpx;
    margin: 20rpx 0;
    border-radius: 12rpx;
    background: #fff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
    color: #333;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.ingredients {
    color: #666;
    font-size: 24rpx;
    margin-top: 10rpx;
}

.add-btn {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 8rpx;
    background-color: #ff8c00;
    color: #fff;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.ingredient-item {
    padding: 20rpx;
    margin-bottom: 10rpx;
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}