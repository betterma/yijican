.container {
  padding: 20rpx;
}

.loading {
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.header {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.btn {
  width: 200rpx;
}

.meal-card {
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 12rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ingredients {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}