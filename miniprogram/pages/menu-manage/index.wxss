.container {
    padding: 20rpx;
}
.add-btn {
    padding: 0;
    margin: 0;
    width: 120px;
    display: inline-block;
    height: 40px;
    line-height: 40px;
    border: 1px solid #7c1160;
    color: #fff;
    background-color: #7c1160;
}
.menu-item {
    padding: 10px;
    display: flex;
    border: 1px solid black;
}

.menu-image {
    border: 1px solid black;
    width: 90px;
    height: 90px;
}

.info {
    border: 1px solid black;
    display: block;
    flex-grow: 1;
}
.name, .ingredients{
    display: inline-block;
    margin: 10px;
}

.ingredients {
    color: #666;
    font-size: 24rpx;
    display: block;
    margin-top: 10rpx;
}

.drawer-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80%;
    background-color: #fff;
    transform: translateY(100%);
    transition: transform 0.3s ease-in-out;
    z-index: 1000;
}

.drawer-container.show {
    transform: translateY(0);
}

.drawer-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
}
