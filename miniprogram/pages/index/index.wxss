    margin: 0;
    width: 120px;
    display: inline-block;
    height: 40px;
    line-height: 40px;
    border: 1px solid #7c1160;
    color: #fff;
    background-color: #7c1160;
}

.header {
    display: flex;
    margin-bottom: 30rpx;
    justify-content: space-between;
}

.calendar-box {
    width: 100%;
    height: 400px;
    /* border: 1px solid black; */
    border-radius: 5px;
    margin-bottom: 10px;
}


 .meal-card {
    padding: 20rpx;
    margin: 20rpx 0;
    border-radius: 12rpx;
    background: #f5f5f5;
